<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Attanagalu Oya Exposure Survey</h:title>
    <model>
      <instance>
        <Gampaha_survey_v3 id="attangalu_oya_3">
          <about_survey/>
          <start_time/>
          <deviceid/>
          <surveyor/>
          <feature_type/>
          <photo_building/>
          <osm_building/>
          <osm_road/>
          <osm_railway/>
          <form_completed/>
          <meta>
            <instanceID/>
          </meta>
        </Gampaha_survey_v3>
      </instance>
      <bind nodeset="/Gampaha_survey_v3/about_survey" readonly="true()" type="string"/>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/Gampaha_survey_v3/start_time" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/Gampaha_survey_v3/deviceid" type="string"/>
      <bind nodeset="/Gampaha_survey_v3/surveyor" type="select1"/>
      <bind nodeset="/Gampaha_survey_v3/feature_type" type="select1"/>
      <bind nodeset="/Gampaha_survey_v3/photo_building" relevant=" /Gampaha_survey_v3/feature_type ='building'" type="binary"/>
      <bind nodeset="/Gampaha_survey_v3/osm_building" relevant=" /Gampaha_survey_v3/feature_type ='building'" type="binary"/>
      <bind nodeset="/Gampaha_survey_v3/osm_road" relevant=" /Gampaha_survey_v3/feature_type ='road'" type="binary"/>
      <bind nodeset="/Gampaha_survey_v3/osm_railway" relevant=" /Gampaha_survey_v3/feature_type ='railway'" type="binary"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/Gampaha_survey_v3/form_completed" type="dateTime"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/Gampaha_survey_v3/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/Gampaha_survey_v3/about_survey">
      <label>Gampaha Exposure Survey</label>
      <hint>This is a basic example of an OpenDataKit survey with OSM questions for OpenMapKit. It is set up for OpenCities projects in Sri Lanka.</hint>
    </input>
    <select1 ref="/Gampaha_survey_v3/surveyor">
      <label>Surveyor name</label>
      <item>
        <label>Robert</label>
        <value>Robert</value>
      </item>
      <item>
        <label>Nandana</label>
        <value>Nandana</value>
      </item>
      <item>
        <label>Suthakaran</label>
        <value>Suthakaran</value>
      </item>
      <item>
        <label>Malinga</label>
        <value>Malinga</value>
      </item>
      <item>
        <label>Eranga</label>
        <value>Eranga</value>
      </item>
      <item>
        <label>Nileesha</label>
        <value>Nileesha</value>
      </item>
      <item>
        <label>Maheshika</label>
        <value>Maheshika</value>
      </item>
      <item>
        <label>Chandani</label>
        <value>Chandani</value>
      </item>
      <item>
        <label>Sulakshi</label>
        <value>Sulakshi</value>
      </item>
      <item>
        <label>Asanka</label>
        <value>Asanka</value>
      </item>
      <item>
        <label>Erik</label>
        <value>Erik</value>
      </item>
      <item>
        <label>Yasundara</label>
        <value>Yasundara</value>
      </item>
    </select1>
    <select1 ref="/Gampaha_survey_v3/feature_type">
      <label>Type of feature you are surveying</label>
      <item>
        <label>Building</label>
        <value>building</value>
      </item>
      <item>
        <label>Road</label>
        <value>road</value>
      </item>
      <item>
        <label>Railway</label>
        <value>railway</value>
      </item>
    </select1>
    <upload mediatype="image/*" ref="/Gampaha_survey_v3/photo_building">
      <label>Photo of building</label>
      <hint>Take a photo of the building you are surveying.</hint>
    </upload>
    <upload mediatype="osm/*" ref="/Gampaha_survey_v3/osm_building">
      <label>Building</label>
      <hint>Tag attributes about this building.</hint>
      <tag key="name">
        <label>Name</label>
      </tag>
      <tag key="addr:street">
        <label>Street Name</label>
      </tag>
      <tag key="addr:postcode">
        <label>Postcode</label>
      </tag>
      <tag key="building">
        <label>Building</label>
        <item>
          <label>Residential</label>
          <value>residential</value>
        </item>
        <item>
          <label>Commercial</label>
          <value>commercial</value>
        </item>
        <item>
          <label>Industrial</label>
          <value>industrial</value>
        </item>
        <item>
          <label>Hospital</label>
          <value>hospital</value>
        </item>
        <item>
          <label>Government</label>
          <value>government</value>
        </item>
        <item>
          <label>Utility</label>
          <value>utility</value>
        </item>
        <item>
          <label>Abandoned</label>
          <value>abandoned</value>
        </item>
        <item>
          <label>Other</label>
          <value>yes</value>
        </item>
      </tag>
      <tag key="amenity">
        <label>Building Type</label>
        <item>
          <label>Place of Worship</label>
          <value>place_of_worship</value>
        </item>
        <item>
          <label>School</label>
          <value>school</value>
        </item>
        <item>
          <label>Church</label>
          <value>church</value>
        </item>
        <item>
          <label>Office Building</label>
          <value>office</value>
        </item>
        <item>
          <label>Bank</label>
          <value>bank</value>
        </item>
        <item>
          <label>Restaurant</label>
          <value>restaurant</value>
        </item>
        <item>
          <label>Community Center</label>
          <value>community_center</value>
        </item>
        <item>
          <label>Clinic</label>
          <value>clinic</value>
        </item>
        <item>
          <label>Not an amenity</label>
          <value>not</value>
        </item>
      </tag>
      <tag key="building:levels">
        <label>Number of Stories</label>
        <item>
          <label>1</label>
          <value>1</value>
        </item>
        <item>
          <label>2</label>
          <value>2</value>
        </item>
        <item>
          <label>3</label>
          <value>3</value>
        </item>
        <item>
          <label>4</label>
          <value>4</value>
        </item>
        <item>
          <label>5</label>
          <value>5</value>
        </item>
        <item>
          <label>6</label>
          <value>6</value>
        </item>
        <item>
          <label>7</label>
          <value>7</value>
        </item>
        <item>
          <label>8</label>
          <value>8</value>
        </item>
        <item>
          <label>9</label>
          <value>9</value>
        </item>
      </tag>
      <tag key="building:material">
        <label>Building Material</label>
        <item>
          <label>Plaster</label>
          <value>plaster</value>
        </item>
        <item>
          <label>Brick</label>
          <value>brick</value>
        </item>
        <item>
          <label>Cement Block</label>
          <value>cement_block</value>
        </item>
        <item>
          <label>Wood or Cadjana</label>
          <value>wood</value>
        </item>
        <item>
          <label>Clay wall or Mud</label>
          <value>clay</value>
        </item>
        <item>
          <label>Bamboo Sheet</label>
          <value>bamboo_sheet</value>
        </item>
        <item>
          <label>Tin</label>
          <value>tin</value>
        </item>
        <item>
          <label>Glass</label>
          <value>glass</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </tag>
      <tag key="building:foundation_height">
        <label>Foundation Height</label>
        <item>
          <label>1</label>
          <value>1</value>
        </item>
        <item>
          <label>1.5</label>
          <value>1.5</value>
        </item>
        <item>
          <label>3</label>
          <value>3</value>
        </item>
        <item>
          <label>&gt;3</label>
          <value>&gt;3</value>
        </item>
      </tag>
      <tag key="roof:material">
        <label>Roof Material</label>
        <item>
          <label>Tile</label>
          <value>tile</value>
        </item>
        <item>
          <label>Asbestos</label>
          <value>asbestos</value>
        </item>
        <item>
          <label>Concrete</label>
          <value>concrete</value>
        </item>
        <item>
          <label>Permanent Zinc Sheet</label>
          <value>zinc</value>
        </item>
        <item>
          <label>Tin Sheet</label>
          <value>tin</value>
        </item>
        <item>
          <label>Cadjan / Palmyrah / Straw</label>
          <value>cadjan_palmyrah_straw</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </tag>
      <tag key="roof:shape">
        <label>Roof Shape</label>
        <item>
          <label>1 Face (Lean-to)</label>
          <value>lean_to</value>
        </item>
        <item>
          <label>2 Faces (Pitched)</label>
          <value>gabled</value>
        </item>
        <item>
          <label>4 Faces (Hipped)</label>
          <value>hipped</value>
        </item>
        <item>
          <label>More than 4 faces</label>
          <value>many</value>
        </item>
      </tag>
      <tag key="note">
        <label>Optional notes</label>
      </tag>
    </upload>
    <upload mediatype="osm/*" ref="/Gampaha_survey_v3/osm_road">
      <label>road</label>
      <hint>Tag attributes about this road</hint>
      <tag key="name">
        <label>Name</label>
      </tag>
      <tag key="highway">
        <label>Highway</label>
        <item>
          <label>Motorway</label>
          <value>motorway</value>
        </item>
        <item>
          <label>Secondary</label>
          <value>secondary</value>
        </item>
        <item>
          <label>Residential</label>
          <value>residential</value>
        </item>
        <item>
          <label>Trunk</label>
          <value>trunk</value>
        </item>
        <item>
          <label>Path</label>
          <value>path</value>
        </item>
        <item>
          <label>Tertiary</label>
          <value>tertiary</value>
        </item>
        <item>
          <label>Primary</label>
          <value>primary</value>
        </item>
        <item>
          <label>Pedestrian</label>
          <value>pedestrian</value>
        </item>
        <item>
          <label>Track</label>
          <value>track</value>
        </item>
      </tag>
      <tag key="ref">
        <label>Road class</label>
      </tag>
      <tag key="surface">
        <label>Surface</label>
        <item>
          <label>Paved</label>
          <value>paved</value>
        </item>
        <item>
          <label>Unpaved</label>
          <value>unpaved</value>
        </item>
        <item>
          <label>Tar / Carpet / Asphalt</label>
          <value>asphalt</value>
        </item>
        <item>
          <label>Concrete</label>
          <value>concrete</value>
        </item>
        <item>
          <label>Sand</label>
          <value>sand</value>
        </item>
        <item>
          <label>Ground</label>
          <value>ground</value>
        </item>
        <item>
          <label>Gravel</label>
          <value>gravel</value>
        </item>
        <item>
          <label>Paving stones</label>
          <value>paving_stones</value>
        </item>
        <item>
          <label>Cobblestone</label>
          <value>cobblestone</value>
        </item>
      </tag>
      <tag key="lane">
        <label>Lane</label>
      </tag>
      <tag key="oneway">
        <label>One-way</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </tag>
      <tag key="note">
        <label>Optional notes</label>
      </tag>
    </upload>
    <upload mediatype="osm/*" ref="/Gampaha_survey_v3/osm_railway">
      <label>Railway</label>
      <hint>Tag attributes about this railway</hint>
      <tag key="name">
        <label>Name</label>
      </tag>
      <tag key="railway">
        <label>Railway type</label>
        <item>
          <label>Standard train line</label>
          <value>rail</value>
        </item>
      </tag>
      <tag key="note">
        <label>Optional notes</label>
      </tag>
    </upload>
  </h:body>
</h:html>
